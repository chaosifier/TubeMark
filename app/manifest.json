{
  "manifest_version": 2,
  "name": "TubeMark",
  "description": "Bookmar youtube timeslice.",
  "version": "1",
  "author": "Sagar Dahal",
  "browser_action": {
    "default_icon": "ic_launcher.png",
    "default_title": "WeTube"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "content_scripts": [{
    "matches": ["*://www.youtube.com/*"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "icons": {
    "256": "ic_launcher.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "options_page": "options/options.html",
  "web_accessible_resources": [
    "options/options.html",
    "popup.html",
    "popup.css",
    "reset.css",
    "videoInfo.js",
    "dist/bundle.js"
  ]
}
